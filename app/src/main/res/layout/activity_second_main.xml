<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="coventryuniversity.locationmonitoring.PeriodicShareActivity"
    android:orientation="vertical">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Periodically share the location with an user"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Share your location with "/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/periodicUserSpinner" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Every  how many seconds?"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondSpinner"
        android:entries="@array/seconds"
        android:prompt="@string/seconds_prompt"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Sharing Location"
        android:onClick="startAlarm" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop Sharing Location"
        android:onClick="cancelAlarm" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alarmSet"/>


</LinearLayout>
